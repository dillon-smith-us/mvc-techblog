<section class="post">
    <div class="whole-post">
        <div class="post-name">
            <a href="/post/{{id}}" class="links">{{title}}</a>
        </div>
        <div class="created-by">
            <p id="comment-subtitle">
                Posted by <b>{{user.username}}</b> on <b>{{formatDate created_at}}</b>
            </p>
        </div>
        <div class="content-section">
            <p>{{content}}</p>
        </div>
    </div>
</section>